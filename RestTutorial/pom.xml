<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>my-spring-boot</artifactId>
        <groupId>com.harishkannarao.spring</groupId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>RestTutorial</artifactId>
    <packaging>pom</packaging>
    <name>Rest Tutorial</name>
    <modules>
        <module>ThirdPartyRestServiceStub</module>
        <module>RestServiceAndConsumer</module>
        <module>RestServiceAndConsumerFunctionalTest</module>
        <module>RestServiceAndJdbcDbFixtures</module>
        <module>RestServiceAndJdbc</module>
        <module>RestServiceAndJdbcFunctionalTest</module>
    </modules>

    <properties>
        <spring.boot.version>1.2.6.RELEASE</spring.boot.version>
        <spring.loaded.version>1.2.4.RELEASE</spring.loaded.version>
        <postgresql.driver.version>9.4-1203-jdbc4</postgresql.driver.version>
        <java.version>1.8</java.version>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                    <version>${spring.boot.version}</version>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>

    </build>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- Import dependency management from Spring Boot -->
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <!-- Import dependency management from Spring Test -->
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-test</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>

            <dependency>
                <groupId>org.postgresql</groupId>
                <artifactId>postgresql</artifactId>
                <version>${postgresql.driver.version}</version>
            </dependency>

            <dependency>
                <groupId>com.harishkannarao.spring</groupId>
                <artifactId>RestServiceAndConsumer</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.harishkannarao.spring</groupId>
                <artifactId>ThirdPartyRestServiceStub</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.harishkannarao.spring</groupId>
                <artifactId>RestServiceAndJdbc</artifactId>
                <version>${project.version}</version>
            </dependency>

            <dependency>
                <groupId>com.harishkannarao.spring</groupId>
                <artifactId>RestServiceAndJdbcDbFixtures</artifactId>
                <version>${project.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>